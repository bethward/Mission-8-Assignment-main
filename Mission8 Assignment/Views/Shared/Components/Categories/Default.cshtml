
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<string>


<div class="btn-block d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-Category="" asp-route-pageNum="1" class="btn btn-block btn-outline-secondary">Home</a>

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-Category="@t" asp-route-pageNum="1"
            class="btn @(ViewBag.Selected == t ? "btn-primary" : "btn-outline-secondary") btn-block">@t</a>
    }
</div>



